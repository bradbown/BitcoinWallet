<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DraculaWallet.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DraculaWallet.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="DraculaWallet"
		
		TransparencyLevelHint="AcrylicBlur"
        Background="{DynamicResource Background}"
		ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Panel>
		<Grid Background="{DynamicResource Background}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Border
				Grid.Column="0"
				Grid.Row="0"
				Background="Transparent" BorderBrush="{DynamicResource CurrentLine}" BorderThickness="0 0 1 1">
				<TextBlock
					Padding="20"
					FontSize="18"
					FontWeight="Light"
					Foreground="{DynamicResource Purple}"
					Text="Dracula Wallet"/>
			</Border>
			<Border
				Grid.Column="0"
				Grid.Row="1"
				Background="Transparent" BorderBrush="{DynamicResource CurrentLine}" BorderThickness="0 0 1 1">
				<TextBlock
					Padding="20"
					FontSize="18"
					FontWeight="Light"
					Foreground="{DynamicResource Purple}"
					Text="Refresh"/>
			</Border>
			<Border
				Grid.Column="0"
				Grid.Row="2"
				Background="Transparent" BorderBrush="{DynamicResource CurrentLine}" BorderThickness="0 0 1 1">
				<TextBlock
					Padding="20"
					FontSize="18"
					FontWeight="Light"
					Foreground="{DynamicResource Purple}"
					Text="Home"/>
			</Border>
			<Border
				Grid.Column="0"
				Grid.Row="3"
				Background="Transparent" BorderBrush="{DynamicResource CurrentLine}" BorderThickness="0 0 1 1">
				<TextBlock
					Padding="20"
					FontSize="18"
					FontWeight="Light"
					Foreground="{DynamicResource Purple}"
					Text="Wallets"/>
			</Border>
			<Border
				Grid.Column="0"
				Grid.Row="4"
				Background="Transparent" BorderBrush="{DynamicResource CurrentLine}" BorderThickness="0 0 1 1">
				<Rectangle
					Grid.Column="0"
					Grid.Row="4"
					Fill="Transparent"/>
			</Border>
		</Grid>

		<!--<TextBlock
			Padding="20"
			FontSize="28"
			FontWeight="DemiBold"
			Foreground="{DynamicResource Purple}">Bitcoin Wallet</TextBlock>-->

	</Panel>


	<!-- TODO Add Wallet collection view here -->
	
	
	
	<!-- TODO Add creator tool view here -->

</Window>

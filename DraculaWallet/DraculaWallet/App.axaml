<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DraculaWallet"
             x:Class="DraculaWallet.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="PrimaryColor">#512bdf</SolidColorBrush>
		<SolidColorBrush x:Key="SecondaryColor">White</SolidColorBrush>
		<SolidColorBrush x:Key="DisabledColor">LightGray</SolidColorBrush>

		<SolidColorBrush x:Key="Background">#282a36</SolidColorBrush>
		<SolidColorBrush x:Key="CurrentLine">#44475a</SolidColorBrush>
		<SolidColorBrush x:Key="Foreground">#f8f8f2</SolidColorBrush>
		<SolidColorBrush x:Key="Comment">#6272a4</SolidColorBrush>
		<SolidColorBrush x:Key="Cyan">#8be9fd</SolidColorBrush>
		<SolidColorBrush x:Key="Green">#50fa7b</SolidColorBrush>
		<SolidColorBrush x:Key="Orange">#ffb86c</SolidColorBrush>
		<SolidColorBrush x:Key="Pink">#ff79c6</SolidColorBrush>
		<SolidColorBrush x:Key="Purple">#bd93f9</SolidColorBrush>
		<SolidColorBrush x:Key="Red">#ff5555</SolidColorBrush>
		<SolidColorBrush x:Key="Yellow">#f1fa8c</SolidColorBrush>
	</Application.Resources>
</Application>
